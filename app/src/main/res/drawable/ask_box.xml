<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 正常的颜色 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFDB3E58" />
            <corners android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
    <!-- 按下的颜色 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffdb707d" />
            <corners android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>

</selector>

