<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.super_lawyer_121.RegOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center|left"
            android:background="#FF0E7FE8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reg_one_back_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF0E7FE8"
                android:onClick="reg_one_back_onclick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reg_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="注册 1/3"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.5"
            android:padding="20dp">

            <EditText
                android:id="@+id/et_reg_lawyernumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/ask_title_style"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:hint="请输入17位资格证号"

                android:maxLength="17"
                android:maxLines="1"
                android:phoneNumber="true"
                android:textColor="#ffb8b8b8"
                android:textColorHint="#ffb8b8b8"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_reg_lawyername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/et_reg_lawyernumber"
                android:background="@drawable/ask_title_style"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:hint="请输入您的名字"
                android:layout_marginTop="20dp"
                android:maxLength="17"
                android:maxLines="1"
                android:textColor="#ffb8b8b8"
                android:textColorHint="#ffb8b8b8"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_reg_lawyerphone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/et_reg_lawyername"
                android:layout_marginTop="20dp"
                android:background="@drawable/ask_title_style"
                android:drawableLeft="@drawable/password"

                android:drawablePadding="10dp"
                android:hint="请输入11位手机号"
                android:inputType="phone"
                android:phoneNumber="true"
                android:maxLength="11"
                android:maxLines="1"

                android:textColor="#ffb8b8b8"
                android:textColorHint="#ffb8b8b8"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/et_reg_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/et_reg_lawyerphone"
                android:layout_marginTop="20dp"
                android:background="@drawable/ask_title_style"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="10dp"
                android:hint="请输入6~12位密码"
                android:maxLines="1"
                android:password="true"
                android:textColor="#ffb8b8b8"
                android:textColorHint="#ffb8b8b8"
                android:textSize="16sp" />


        </RelativeLayout>

        <Button
            android:id="@+id/ToTwoButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ask_button_style"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>


</RelativeLayout>
